<div class="wm_signup_container">
    <div class="wm_signup_titulo">
        <p>Registro-Primera Cita</p>
    </div>
    <form action="/registrar" method="post">
        <div class="wm_signup_msg">
            <p>¡Su usuario será su número de documento!</p>
        </div>
        <div class="wm_signup_form">
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_signup_tdocument">Tipo de documento</label>
                <select name="wm_signup_tdocument" id="wm_signup_tdocument">
                    <option value="cedula">Cédula</option>
                    <option value="tarjeta-identidad">Tarjeta de Identidad</option>
                    <option value="registro">Registro</option>
                </select>
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_signup_cedula">Nro. Documento:</label>
                <input type="text" name="wm_signup_cedula" id="wm_signup_cedula" placeholder="Cédula" required="" value="{{wm_signup_cedula}}">
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_signup_nombre">Nombres:</label>
                <input type="text" name="wm_signup_nombre" id="wm_signup_nombre" placeholder="Primer nombre"
                    required="" value="{{wm_signup_nombre}}">
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_signup_apellido">Apellidos:</label>
                <input type="text" name="wm_signup_apellido" id="wm_signup_apellido" placeholder="Primer nombre"
                    required="" value="{{wm_signup_apellido}}">
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_sign_up">Télefono:</label>
                <input type="text" name="wm_signup_telefono" id="wm_signup_telefono" placeholder="Teléfono" required="" value="{{wm_signup_telefono}}">
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_signup_aseguradora">Aseguradora:</label>
                <select name="wm_signup_aseguradora" id="wm_signup_aseguradora">
                    <option value="mutualser">Mutualser</option>
                    <option value="colpatria">Colpatria</option>
                    <option value="sanitas">Sanitas</option>
                    <option value="colsanitas">colsanitas</option>
                </select>
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_sign_up">Contraseña:</label>
                <input type="password" name="wm_signup_password" id="wm_signup_password" minlength="4" maxlength="4"
                    placeholder="Contraseña" required="Password">
            </div>
            <div class="wm_signup_input">
                <label class="wm_signup_label" for="wm_sign_up">Confirmar Contraseña:</label>
                <input type="password" name="wm_signup_confirmpass" id="wm_signup_confirmpass" minlength="4"
                    maxlength="4" placeholder="Confirmar contraseña" required="Password">
            </div>
        </div>
        <div class="wm_signup_input">
            <label class="wm_signup_label" for="wm_signup_especialidad">Especialidad:</label>
            <select name="wm_signup_especialidad" id="wm_signup_aseguradora">
                <option value="Optometria">Optometría</option>
                <option value="Oftalmologia">Oftalmología</option>
                <option value="ortopedia">Ortopedia</option>
                <option value="cirugia">cirugia</option>
            </select>
        </div>
        
        <div>{{>messageserr}}{{>messages}}</div>
        <div class="wm_signup_button">
            <button>Registrarse</button>
        </div>
    </form>
</div>